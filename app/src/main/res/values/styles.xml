<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="Subject">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="Desc">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="BGMain">
        <item name="android:background">@color/primaryLightColor</item>
    </style>
    <style name="BG1">
        <item name="android:background">@color/colorAccent</item>
    </style>
    <style name="BG2">
        <item name="android:background">@color/secondaryColor</item>
    </style>
    <style name="BG3">
        <item name="android:background">@color/secondaryDarkColor</item>
    </style>
    <style name="BG4">
        <item name="android:background">@color/primaryTextColor</item>
    </style>

</resources>
